<% include ./partials/header %>

<div class="container">
	<div class="row">
		<div style="width: 30%; margin: 30px auto">
			<form action="/reset/<%= token %>" method="POST">
                <legend>Reset Password</legend>
				<div class="form-group">
                    <label for="password">New Password</label>
                    <input class="form-control" type="password" name="password" value="" placeholder="New Password" autofocus="autofocus"/>	
				</div>
				<div class="form-group">
                    <label for="confirm">Confirm Password</label>
                    <input class="form-control" type="password" name="confirm" placeholder="Confirm Password"/>
                </div>
                <div>
					<button class="btn btn-lg btn-primary btn-block">Update Password</button>
				</div>
			</form>
		</div>
	</div>
</div>

<% include ./partials/footer %>